@inherits LayoutComponentBase
<style>
    .tagline-bar {
        background: #20232a; 
        padding: 12px 0;
        border-radius: 0 0 8px 8px;
        text-align: center;
    }

    .navbar-brand {
        font-family: 'Segoe UI', 'Arial', sans-serif;
        font-size: 1.4rem;
        font-weight: 800;
        letter-spacing: 1.2px;
        color: #ff9800;
        background: linear-gradient(90deg, #2575fc 0%, #ff9800 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        text-fill-color: transparent;
        text-shadow: 1px 2px 8px rgba(37,117,252,0.10);
        margin-top: 10px;
        margin-bottom: 10px;
        display: inline-block;
    }

    .team-footer {
        position: fixed;
        left: 0;
        bottom: 0;
        width: 100%;
        background: rgb(52,12,76);
        color: #ff9800;
        font-family: 'Segoe UI', 'Arial', sans-serif;
        text-align: center;
        font-size: 1.1rem;
        font-weight: 800;
        letter-spacing: 1.2px;
        padding: 10px 0 8px 0;
        z-index: 100;
        box-shadow: 0 -2px 8px rgba(0,0,0,0.04);
        border-radius: 8px 8px 0 0;
    }

    .team-name {
        color: white;
        font-weight: 800;
        margin-left: 4px;
    }

    .profile-panel {
        position: absolute;
        top: 60px;
        right: 32px;
        min-width: 180px;
        background: #fff;
        border: 1px solid #e0e0e0;
        border-radius: 8px;
        box-shadow: 0 2px 12px rgba(0,0,0,0.08);
        z-index: 2000;
        padding: 0.75rem 1rem;
    }

    .profile-panel .username {
        font-weight: 600;
        color: #333;
        margin-bottom: 0.5rem;
        display: block;
    }

    .profile-panel .logout-link {
        color: #0d6efd;
        cursor: pointer;
        text-decoration: none;
        font-weight: 500;
    }

    .profile-panel .logout-link:hover {
        text-decoration: underline;
    }

</style>

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <a class="navbar-brand" href="">You ask, we write. Let your data speak!</a>
            <button class="btn btn-link p-0" style="text-decoration:none;" @onclick="ToggleProfilePanel" title="Profile">
                <span class="bi bi-person-circle" style="font-size:2rem; color:#0d6efd;"></span>
            </button>
            @if (showProfilePanel)
            {
                <div class="profile-panel" @onclick:stopPropagation>
                    <span class="username">@AuthService.CurrentUsername</span>
                    <a class="logout-link" @onclick="Logout">Logout</a>
                </div>
            }
        </div>

        <article class="content px-4">
            @Body
        </article>
        <footer class="team-footer">
            Authored by <span class="team-name">Claim Crafters</span>
        </footer>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code {
    [Inject] private AuthenticationService AuthService { get; set; }
    [Inject] private NavigationManager Navigation { get; set; }

    private bool showProfilePanel = false;
    private void ToggleProfilePanel() => showProfilePanel = !showProfilePanel;

    private async Task Logout()
    {
        await AuthService.LogoutAsync();
        Navigation.NavigateTo("/login", true);
    }
}




